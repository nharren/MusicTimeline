<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NathanHarrenstein.Timeline"
                    xmlns:controls="clr-namespace:NathanHarrenstein.Controls;assembly=Framework"
                    xmlns:panels="clr-namespace:NathanHarrenstein.Timeline.UI.Panels">
    
    <Style TargetType="{x:Type local:Timeline}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Timeline}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <controls:PanGrid Background="Transparent" FocusVisualStyle="{x:Null}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <local:EraDisplay Start="{TemplateBinding Start}"
                                              End="{TemplateBinding End}"
                                              ItemsSource="{TemplateBinding Eras}"
                                              Grid.Row="0"
                                              Height="26"
                                              IsHitTestVisible="False"
                                              TextBlock.FontSize="14"
                                              TextBlock.FontFamily="Cambria"
                                              TextBlock.Foreground="Black"
                                              Resolution="{TemplateBinding Resolution}"
                                              Ruler="{TemplateBinding Ruler}">
                                <local:EraDisplay.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <panels:EraPanel />
                                    </ItemsPanelTemplate>
                                </local:EraDisplay.ItemsPanel>
                            </local:EraDisplay>
                            <local:TimeDisplay Start="{TemplateBinding Start}"
                                               End="{TemplateBinding End}"
                                               Grid.Row="1"
                                               Height="24"
                                               IsHitTestVisible="False"
                                               Ruler="{TemplateBinding Ruler}"
                                               Resolution="{TemplateBinding Resolution}"
                                               LabelOffset="10"
                                               Unit="10"
                                               FontSize="12"
                                               Foreground="Black"
                                               Font="Calibri">
                                <local:TimeDisplay.LinePen>
                                    <Pen Brush="#FFD7D7D7"
                                         Thickness="1" />
                                </local:TimeDisplay.LinePen>
                            </local:TimeDisplay>
                            <!--<local:GuidelineDisplay Grid.Row="2"
                                                    MajorFrequency="10"
                                                    LineWidth="10"
                                                    IsHitTestVisible="False">
                                <local:GuidelineDisplay.MinorPen>
                                    <Pen Brush="#FFEBEBEB"
                                         Thickness="1" />
                                </local:GuidelineDisplay.MinorPen>
                                <local:GuidelineDisplay.MajorPen>
                                    <Pen Brush="#FFD7D7D7"
                                         Thickness="1" />
                                </local:GuidelineDisplay.MajorPen>
                            </local:GuidelineDisplay>-->
                            <local:EventDisplay Grid.Row="2"
                                                EventSpacing="1"
                                                EventHeight="26"
                                                TextBlock.FontSize="14"
                                                TextBlock.FontFamily="Cambria"
                                                TextBlock.Foreground="Black"
                                                Ruler="{TemplateBinding Ruler}"
                                                Resolution="{TemplateBinding Resolution}"
                                                Start="{TemplateBinding Start}"
                                                End="{TemplateBinding End}"
                                                ItemsSource="{TemplateBinding Events}">
                                <local:EventDisplay.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <panels:EventPanel />
                                    </ItemsPanelTemplate>
                                </local:EventDisplay.ItemsPanel>
                            </local:EventDisplay>
                        </controls:PanGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>