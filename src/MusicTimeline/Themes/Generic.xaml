    <Style TargetType="{x:Type c:BulletStyleDropdownButton}">
        <Setter Property="Height" Value="31" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:BulletStyleDropdownButton}">
                    <ControlTemplate.Resources>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Padding" Value="4,1" />
                            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="true">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF" />
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF" />
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="Selector.IsSelectionActive" Value="False" />
                                                    <Condition Property="IsSelected" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF" />
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF" />
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="Selector.IsSelectionActive" Value="True" />
                                                    <Condition Property="IsSelected" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF" />
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF" />
                                            </MultiTrigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ControlTemplate.Resources>
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                        <Grid Name="rootGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="1" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Popup Name="popup"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsChecked,
                                                    ElementName=toggleDropdown}"
                                   PlacementTarget="{Binding ElementName=rootGrid}">
                                <ListBox Name="listBox"
                                         Background="#EE333333"
                                         BorderBrush="#22FFFFFF"
                                         BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="local:BulletStyle">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="15" />
                                                    <ColumnDefinition Width="5" />
                                                    <ColumnDefinition Width="1" />
                                                    <ColumnDefinition Width="5" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock HorizontalAlignment="Center"
                                                           FontFamily="{Binding FontFamily}"
                                                           FontSize="10pt"
                                                           Foreground="#FFDCDFE2"
                                                           Text="{Binding RepresentativeSymbol}"
                                                           TextAlignment="Center" />
                                                <Rectangle Grid.Column="2"
                                                           Fill="#22FFFFFF"
                                                           StrokeThickness="0" />
                                                <TextBlock Grid.Column="4"
                                                           FontSize="10pt"
                                                           Foreground="#FFDCDFE2"
                                                           Text="{Binding DisplayName}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Popup>

                            <ToggleButton Name="toggleOnOff">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="border"
                                                Background="#22FFFFFF"
                                                BorderBrush="Black"
                                                BorderThickness="0"
                                                SnapsToDevicePixels="True"
