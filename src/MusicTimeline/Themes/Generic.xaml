                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion NationalitiesEditPanel-->

    <!--#region NationalitiesPanel-->
    <Style TargetType="{x:Type c:NationalitiesPanel}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:NationalitiesPanel}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal">
                            <ItemsControl Name="itemsControl"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center">
                                <ItemsControl.Resources>
                                    <Style TargetType="Image">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </ItemsControl.Resources>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <c:EditButton x:Name="nationalitiesEditButton"
                                          Height="14"
                                          Padding="15,0,0,0"
                                          Visibility="Hidden" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion NationalitiesPanel-->

    <!--#region SamplesEditPanel-->
    <Style TargetType="{x:Type c:SamplesEditPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:SamplesEditPanel}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <c:AddSaveToolbar x:Name="toolbar"
                                              Height="31"
                                              Background="#33555555"
                                              BorderBrush="Black"
                                              BorderThickness="0" />
                            <ListBox Name="listBox"
                                     Grid.Row="1"
                                     Background="#33000000"
                                     BorderThickness="0"
                                     Padding="5"
                                     VirtualizingPanel.IsContainerVirtualizable="False">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter Name="contentPresenter" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplateSelector>
                                    <c:SelectionDataTemplateSelector>
                                        <c:SelectionDataTemplateSelector.SelectedTemplate>
                                            <DataTemplate DataType="{x:Type db:Sample}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid Background="#33FFFFFF">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Button Name="sampleLoadButton"
                                                                Width="50"
                                                                Height="30"
                                                                Margin="8,0,0,0"
                                                                Content="Load" />
                                                        <TextBlock Name="sampleSizeTextBlock"
                                                                   Grid.Column="1"
                                                                   Margin="5,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="11.5pt"
                                                                   Foreground="{StaticResource ForegroundBrush}" />
                                                    </Grid>
                                                    <TextBox Name="sampleTitleTextBox"
                                                             Grid.Row="1"
                                                             Background="#33000000"
                                                             BorderThickness="0"
                                                             FontSize="11.5pt"
                                                             Foreground="{StaticResource ForegroundBrush}"
                                                             Padding="8"
                                                             Text="{Binding Title}" />
                                                    <TextBox Name="sampleArtistsTextBox"
                                                             Grid.Row="2"
                                                             Background="#33000000"
                                                             BorderThickness="0"
                                                             FontSize="11.5pt"
                                                             Foreground="{StaticResource ForegroundBrush}"
                                                             Padding="8,0,8,8"
                                                             Text="{Binding Artists}" />

                                                </Grid>

                                            </DataTemplate>
                                        </c:SelectionDataTemplateSelector.SelectedTemplate>
                                        <c:SelectionDataTemplateSelector.UnselectedTemplate>
                                            <DataTemplate DataType="{x:Type db:Sample}">
                                                <TextBlock Margin="0,0,0,5"
                                                           FontSize="11.5pt"
                                                           Foreground="{StaticResource ForegroundBrush}"
                                                           Text="{Binding Title}" />
                                            </DataTemplate>
                                        </c:SelectionDataTemplateSelector.UnselectedTemplate>
                                    </c:SelectionDataTemplateSelector>
                                </ListBox.ItemTemplateSelector>
                            </ListBox>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion SamplesEditPanel-->

    <!--#region SaveToolbar-->
    <Style TargetType="{x:Type c:SaveToolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:SaveToolbar}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="PART_CancelButton"
                                    Grid.Column="1"
                                    Width="31"
                                    Margin="0,0,1,0"
                                    Content="&#x20E0;"
                                    FontSize="17.3333333333"
                                    Foreground="Red"
                                    Template="{StaticResource ToolbarButtonTemplate}" />
                            <Button x:Name="PART_SaveButton"
                                    Grid.Column="2"
                                    Width="31"
                                    Content="&#x2714;"
                                    FontSize="17.3333333333"
                                    Foreground="LimeGreen"
                                    Template="{StaticResource ToolbarButtonTemplate}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion SaveToolbar-->

</ResourceDictionary>
