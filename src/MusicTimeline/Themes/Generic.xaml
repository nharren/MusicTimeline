    <!--#region BiographyToolbar-->
    <Style TargetType="{x:Type c:BiographyToolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:BiographyToolbar}">
                    <ControlTemplate.Resources>
                        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="17" />
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Border"
                                        Grid.ColumnSpan="2"
                                        Background="{StaticResource MenuBackgroundBrush}"
                                        BorderBrush="{StaticResource InputBorderBrush}"
                                        BorderThickness="1,0" />
                                <Border Grid.Column="0" Margin="1" />
                                <Path x:Name="Arrow"
                                      Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                      Fill="{TemplateBinding Foreground}" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
                            <Border x:Name="PART_ContentHost"
                                    Background="{TemplateBinding Background}"
                                    Focusable="False" />
                        </ControlTemplate>

                        <Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
                            <Setter Property="SnapsToDevicePixels" Value="true" />
                            <Setter Property="OverridesDefaultStyle" Value="true" />
                            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
                            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
                            <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
                            <Setter Property="MinHeight" Value="20" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="PART_EditableTextBox"
                                                         Margin="5,4,5,2"
                                                         Background="Transparent"
                                                         CaretBrush="{TemplateBinding Foreground}"
                                                         Focusable="True"
                                                         Foreground="{TemplateBinding Foreground}"
                                                         Style="{x:Null}"
                                                         Template="{StaticResource ComboBoxTextBox}" />
                                                <Popup x:Name="Popup"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       Placement="Bottom">
                                                    <Grid x:Name="DropDown"
                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                          SnapsToDevicePixels="True">
                                                        <Border x:Name="DropDownBorder"
                                                                Background="{StaticResource InputBackgroundBrush}"
                                                                BorderBrush="{StaticResource InputBorderBrush}"
                                                                BorderThickness="1" />
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </Grid>
                                                </Popup>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Grid.Column="2"
                                                              ClickMode="Press"
                                                              Focusable="false"
                                                              Foreground="{TemplateBinding Foreground}"
                                                              IsChecked="{Binding IsDropDownOpen,
                                                                                  Mode=TwoWay,
                                                                                  RelativeSource={RelativeSource TemplatedParent}}"
                                                              Template="{StaticResource ComboBoxToggleButton}" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems" Value="false">
                                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                                            </Trigger>
                                            <Trigger Property="IsGrouping" Value="true">
                                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border Name="border" BorderThickness="1">
                                            <ContentPresenter Name="contentPresenter" Margin="5" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="PART_FontSizeComboBox"
                                      Width="75"
                                      HorizontalContentAlignment="Left"
                                      VerticalContentAlignment="Center"
                                      Background="{StaticResource InputBackgroundBrush}"
                                      BorderBrush="#11000000"
                                      BorderThickness="0"
                                      FontSize="11.5pt"
                                      Foreground="{TemplateBinding Foreground}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      Padding="0,-1,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="10,0"
                                                   FontSize="10pt"
                                                   Text="{Binding}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <ToggleButton x:Name="PART_BoldToggleButton"
                                          Grid.Column="1"
                                          Width="31"
                                          Margin="1,0,0,0"
                                          BorderBrush="{StaticResource InputBorderBrush}"
                                          BorderThickness="0,0,1,0"
                                          Command="{x:Static EditingCommands.ToggleBold}"
                                          CommandTarget="{TemplateBinding RichTextBox}"
                                          Content="B"
                                          FontFamily="Cambria"
                                          FontSize="17"
                                          FontWeight="Bold"
                                          Foreground="{TemplateBinding Foreground}"
                                          IsEnabled="{Binding IsEnabledToolBarItems}"
                                          Template="{StaticResource ToolbarToggleButtonTemplate}"
                                          ToolTip="Bold" />
                            <ToggleButton x:Name="PART_ItalicToggleButton"
                                          Grid.Column="2"
                                          Width="31"
                                          Margin="1,0,0,0"
                                          BorderBrush="{StaticResource InputBorderBrush}"
                                          BorderThickness="0,0,1,0"
                                          Command="{x:Static EditingCommands.ToggleItalic}"
                                          CommandTarget="{TemplateBinding RichTextBox}"
                                          Content="I"
                                          FontFamily="Cambria"
                                          FontSize="17"
                                          FontStyle="Italic"
                                          Foreground="{TemplateBinding Foreground}"
                                          IsEnabled="{Binding IsEnabledToolBarItems}"
                                          Template="{StaticResource ToolbarToggleButtonTemplate}"
                                          ToolTip="Italic" />
                            <c:BulletStyleDropdownButton x:Name="PART_BulletStyleDropdownButton"
                                                         Grid.Column="3"
                                                         BorderBrush="{StaticResource InputBorderBrush}"
                                                         Foreground="{TemplateBinding Foreground}"
                                                         IsEnabled="{Binding IsEnabledToolBarItems}" />
                            <Button x:Name="PART_DecreaseIndentButton"
                                    Grid.Column="4"
                                    Width="31"
                                    BorderBrush="{StaticResource InputBorderBrush}"
                                    BorderThickness="0,0,1,0"
                                    Command="{x:Static EditingCommands.DecreaseIndentation}"
                                    CommandTarget="{TemplateBinding RichTextBox}"
                                    IsEnabled="{Binding IsEnabledToolBarItems}"
                                    Padding="0,4,0,0"
                                    ToolTip="Decrease Indent">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                Background="Transparent"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                SnapsToDevicePixels="True">
                                            <Viewbox Height="13"
                                                     Margin="0,1,0,0"
                                                     Stretch="Uniform">
                                                <Path Name="path"
                                                      Fill="{TemplateBinding Foreground}"
                                                      SnapsToDevicePixels="True"
                                                      UseLayoutRounding="True">
                                                    <Path.Data>
                                                        <PathGeometry Figures="M 0 3 6 3 6 5 0 5 0 3 Z M 14 1 6 1 6 0 14 0 14 1 Z M 6 9 2 9 2 7 6 7 6 9 Z m 0 2 8 0 0 1 -8 0 0 -1 z m 6 -8 -2 0 -3 3 3 3 2 0 -2 -2 4 0 0 -2 -4 0 2 -2 z" FillRule="NonZero" />
                                                    </Path.Data>
                                                </Path>
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="PART_IncreaseIndentButton"
                                    Grid.Column="5"
                                    Width="31"
                                    BorderBrush="{StaticResource InputBorderBrush}"
                                    BorderThickness="0,0,1,0"
                                    Command="{x:Static EditingCommands.IncreaseIndentation}"
                                    CommandTarget="{TemplateBinding RichTextBox}"
                                    IsEnabled="{Binding IsEnabledToolBarItems}"
                                    ToolTip="Increase Indent">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                Background="Transparent"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                SnapsToDevicePixels="True">
                                            <Viewbox Height="13"
                                                     Margin="0,1,0,0"
                                                     Stretch="Uniform">
                                                <Path Name="path"
                                                      Fill="{TemplateBinding Foreground}"
                                                      UseLayoutRounding="True">
                                                    <Path.Data>
                                                        <PathGeometry Figures="M 8 3 14 3 14 5 8 5 8 3 Z M 0 0 8 0 8 1 0 1 0 0 Z m 8 7 4 0 0 2 -4 0 0 -2 z m 0 5 -8 0 0 -1 8 0 0 1 z M 4 5 0 5 0 7 4 7 2 9 4 9 7 6 4 3 2 3 4 5 Z" FillRule="NonZero" />
                                                    </Path.Data>
                                                </Path>
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="PART_CancelButton"
                                    Grid.Column="7"
                                    Width="33"
                                    BorderBrush="{StaticResource InputBorderBrush}"
                                    BorderThickness="1,0"
                                    Content="&#x20E0;"
                                    FontSize="13pt"
                                    Foreground="Red"
                                    Padding="0,0,0,1"
                                    Template="{StaticResource ToolbarButtonTemplate}" />
                            <Button x:Name="PART_SaveButton"
                                    Grid.Column="8"
                                    Width="31"
                                    BorderThickness="0"
                                    Content="&#x2714;"
                                    FontSize="13pt"
                                    Foreground="LimeGreen"
                                    Padding="0,0,0,2"
                                    Template="{StaticResource ToolbarButtonTemplate}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion BiographyToolbar-->

    <!--#region BulletStyleDropdownButton-->
    <Style TargetType="{x:Type c:BulletStyleDropdownButton}">
        <Setter Property="Height" Value="31" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:BulletStyleDropdownButton}">
                    <ControlTemplate.Resources>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Padding" Value="4,1" />
                            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="true">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHoverBrush}" />
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ControlTemplate.Resources>
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                        <Grid Name="rootGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="1" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Popup Name="popup"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsChecked,
                                                    ElementName=toggleDropdown}"
                                   PlacementTarget="{Binding ElementName=rootGrid}">
                                <ListBox Name="listBox"
                                         Background="{StaticResource InputBackgroundBrush}"
                                         BorderBrush="{StaticResource InputBorderBrush}"
                                         BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="local:BulletStyle">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="15" />
                                                    <ColumnDefinition Width="5" />
