                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="PART_CancelButton"
                                    Grid.Column="7"
                                    Width="31"
                                    Margin="0,0,1,0"
                                    Content="&#x20E0;"
                                    FontSize="13pt"
                                    Foreground="Red"
