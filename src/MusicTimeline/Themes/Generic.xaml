                                                                   Height="10"
                                                                   VerticalAlignment="Center"
                                                                   Focusable="False"
                                                                   OverridesDefaultStyle="True">
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                                        <Grid HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              UseLayoutRounding="True">
                                                                            <Path x:Name="grip"
                                                                                  VerticalAlignment="Center"
                                                                                  Fill="#FFF0F0F0"
