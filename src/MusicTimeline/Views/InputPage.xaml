                    <TextBlock Grid.ColumnSpan="13"
                               Style="{StaticResource SectionHeaderStyle}"
                               Text="Recordings" />
                    <Rectangle Grid.Row="2"
                               Grid.ColumnSpan="13"
                               Fill="#FF758287"
                               StrokeThickness="0" />
                    <ListBox x:Name="RecordingListBox"
                             Grid.Row="4"
                             Grid.RowSpan="19"
                             Grid.ColumnSpan="2"
                             AllowDrop="True"
                             Background="#FF42474B"
                             BorderThickness="0"
                             Drop="RecordingListBox_Drop"
                             SelectionChanged="RecordingListBox_SelectionChanged">
                        <ListBox.CommandBindings>
                            <CommandBinding Command="{x:Static ApplicationCommands.Delete}" Executed="RecordingDeleteCommand_Executed" />
                        </ListBox.CommandBindings>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type db:Recording}">
                                <TextBlock FontSize="14.667"
                                           Foreground="#FFC8CDD1"
                                           Text="{Binding ID}">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{x:Static ApplicationCommands.Delete}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBlock Grid.Row="4"
                               Grid.Column="4"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Path:" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="10"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Performers:" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="10"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Performers:" />
                    <TextBox x:Name="RecordingPathTextBox"
                             Grid.Row="6"
                             Grid.Column="3"
                             Grid.ColumnSpan="5"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Style="{StaticResource TextBoxFieldStyle}" />
                    <ListBox x:Name="RecordingPerformerListBox"
                             Grid.Row="6"
                             Grid.RowSpan="17"
                             Grid.Column="10"
                             AllowDrop="True"
                             Background="#FF42474B"
                             BorderThickness="0"
                             Drop="RecordingPerformerListBox_Drop"
                             SelectionMode="Extended">
                        <ListBox.CommandBindings>
                            <CommandBinding Command="{x:Static ApplicationCommands.Delete}" Executed="RecordingPerformerDeleteCommand_Executed" />
                        </ListBox.CommandBindings>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type db:Performer}">
                                <TextBlock FontSize="14.667"
                                           Foreground="#FFC8CDD1"
                                           Text="{Binding Name}">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{x:Static ApplicationCommands.Delete}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBlock Grid.Row="8"
                               Grid.Column="4"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Album:" />
                    <c:AutoCompleteBox x:Name="RecordingAlbumAutoCompleteBox"
                                       Grid.Row="10"
                                       Grid.Column="3"
                                       Grid.ColumnSpan="5"
                                       IsTabStop="False"
                                       SuggestionTemplate="{StaticResource SuggestionTemplate}"
                                       TextChanged="RecordingAlbumAutoCompleteBox_TextChanged" />
                    <TextBlock Grid.Row="12"
                               Grid.Column="4"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Track:" />
                    <TextBlock Grid.Row="12"
                               Grid.Column="7"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Dates:" />
                    <c:DoubleBorderDecorator Grid.Row="14"
                                             Grid.Column="3"
                                             Grid.ColumnSpan="2"
                                             Style="{StaticResource FieldBorderStyle}">
                        <c:NumberBox x:Name="RecordingTrackNumberBox"
                                     CaretBrush="#DFE0E6"
                                     MaxLength="2"
                                     Style="{StaticResource FieldStyle}"
                                     TextAlignment="Center" />
                    </c:DoubleBorderDecorator>
                    <TextBox x:Name="RecordingDatesTextBox"
                             Grid.Row="14"
                             Grid.Column="6"
                             Grid.ColumnSpan="2"
                             Style="{StaticResource TextBoxFieldStyle}" />
                    <TextBlock Grid.Row="16"
                               Grid.Column="4"
                               Grid.ColumnSpan="4"
                               Style="{StaticResource FieldHeaderStyle}"
                               Text="Locations:" />
                    <ListBox x:Name="RecordingLocationListBox"
                             Grid.Row="18"
                             Grid.RowSpan="5"
                             Grid.Column="3"
                             Grid.ColumnSpan="5"
                             AllowDrop="True"
                             Background="#FF42474B"
                             BorderThickness="0"
                             Drop="RecordingLocationListBox_Drop">
                        <ListBox.CommandBindings>
                            <CommandBinding Command="{x:Static ApplicationCommands.Delete}" Executed="RecordingLocationDeleteCommand_Executed" />
                        </ListBox.CommandBindings>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type db:Location}">
                                <TextBlock FontSize="14.667"
                                           Foreground="#FFC8CDD1"
                                           Text="{Binding Name}">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{x:Static ApplicationCommands.Delete}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid Name="StatusAndButtonSection" Grid.Row="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1"
                            Click="CancelButton_Click"
                            Content="Cancel"
                            Padding="10,3"
                            Template="{DynamicResource ButtonTemplate}" />
                    <Button Grid.Column="3"
                            Click="SubmitButton_Click"
                            Content="Submit"
                            Padding="10,3"
                            Template="{DynamicResource ButtonTemplate}" />
                </Grid>
            </Grid>
        </Border>
    </ScrollViewer>
</Page>